          {
            "uriPattern":"/push/registration",
            "endpointName":"Register",
            "method":"POST",
            "authType":"USER",
            "throttlingTier":"UNLIMITED",
            "scope":"write:push-registration"
          },
          {
            "uriPattern":"/push/registration/{id}",
            "endpointName":"Register",
            "method":"GET",
            "authType":"USER",
            "throttlingTier":"UNLIMITED",
            "scope":"write:push-registration"
          }
        ]
      }
    ]
  }
}
